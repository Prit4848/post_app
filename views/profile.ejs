<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>mini praoject</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="w-full min-h-screen bg-zinc-900  p-10 text-white">

        <!-- for logout button -->
        <div class="w-full flex justify-end">
           <a class="bg-red-500 rounded-md px-3 py-2 text-sm mb-5 inline-block"  href="/logout">logout</a>
        </div>
        <div class="flex items-start gap-3">
            <div class="w-10 h-10  border rounded-md overflow-hidden">
                <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profilepic %>" alt="">
            </div>
            <h3 class="text-3xl mb-5"><span class="text-light">Hello</span>, <%= user.name%>üëãüèº</h3>
        </div>
        <h5 class="mb-5 mt-3">you can create a new post. </h5>

         <!-- use for post -->
        <form method="post" action="/post">
            <textarea class="block p-3 outline-none bg-zinc-700 w-60" name="content" id="" placeholder="whats in your mind ?"></textarea>
            <input class="px-3 w-30 py-2 text-sm bg-blue-500 block rounded-md mt-2" value="create post" name="post" href="/post" type="submit">
        </form>

        <!-- for see your post's -->
        <div class="posts mt-5">
            <h3 class="text-zinc-400 py-2">your posts.</h3>
            <div class="postcountainer mt-5">
                <% user.posts.reverse().forEach(function(post){ %>
                    <div class="post w-1/3 p-4 mb-4 rounded-md border-2 border-zinc-800 ">
                        <h4 class="text-blue-500 mb-2">@<%= user.username %></h4>
                        <p class="text-sm tracking-light "><%= post.content %></p>
                        <div class="btns flex-20">
                            <a class="text-blue-500" href="/like/<%= user._id %>">Like</a>
                            <a class="text-zinc-600" href="">Edit</a>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>


       
    </div>
</body>
</html>